.section {
  & .section-title {
    color: env(--text-color);
    font-size: 22px;
    margin: 0;
    padding: 5px;
    display: table;
    white-space: nowrap;
    width: 100%;

    &::after,
    &::before {
      border-top: 6px solid env(--color-primary);
      content: '';
      display: table-cell;
      position: relative;
      top: 10px;
      width: 45%;
    }

    &::after {
      left: 1.5%;
    }

    &::before {
      right: 1.5%;
    }
  }
}
